$MediaM = 770
$MediaL = 1200
$MediaS = 620

// 基本スマホ記述(～770px)

// lg記述(1200px～)
lg()
  @media screen and (min-width unit($MediaL , "px"))
    {block}

// md記述(770px～1200px)
md()
  @media screen and (min-width unit($MediaM, "px"))
    {block}

// sm記述(～480px)
sm()
  @media screen and (max-width unit($MediaS, "px"))
    {block}

#contents
    
  .list-column-container
    justify-content: start
    +sm()
      display: inline 
      & .list-column
        width: 100%
        & img
          object-fit: cover
          width: 100%
          height: 7rem
          
  .list
    &:nth-of-type(1)::before
      content: "Wan Rei"
      font-size: 12vw
      left: 5%
      top: 10%

  .about-name
    text-align: center
    & h4
      font-size: 0.6rem
      margin-bottom: 0
      padding-bottom: 0
    & .daihyo
      font-size: 0.2rem
      margin-right: 0.4rem
