$MediaM = 770
$MediaL = 1200
$MediaS = 620

// 基本スマホ記述(～770px)

// lg記述(1200px～)
lg()
  @media screen and (min-width unit($MediaL , "px"))
    {block}

// md記述(770px～1200px)
md()
  @media screen and (min-width unit($MediaM, "px"))
    {block}

// sm記述(～480px)
sm()
  @media screen and (max-width unit($MediaS, "px"))
    {block}

#contents
    
  .list-column-container
    justify-content: start
    & .list-column h4
      +sm()
        font-size: 16px
    +sm()
      display: inline 
      & .list-column
        width: 100%
        & img
          object-fit: cover
          width: 100%
          height: 7rem
  .list
    &:nth-of-type(1)::before
      content: "Wan Rei"
      font-size: 12vw
      left: 5%
      top: 10%

  .about-name
    text-align: center
    & h4
      font-size: 0.6rem
      margin-bottom: 0
      padding-bottom: 0
    & .daihyo
      font-size: 0.2rem
      margin-right: 0.4rem

#contents h2
  font-size: 200%;

.footer
  width: auto
  max-width 800px
  padding: 10px
  margin: 0 auto

  &__nav
    margin: 20px auto
    
    ul
      display: flex
      justify-content: center
      flex-wrap: wrap
      li
        margin-right: 10px
        a
          text-decoration: none

.base-info
  display: flex
  flex-wrap: wrap
  justify-content: center
  align-items: center
  padding: 10px
  font-size: 16px
  margin-bottom: 20px: 

  &__logo
    img
      width: 100px;
  &__text
    text-align: left
    margin-left:10px

.map
  width: auto
  height: 300px
  background: #ccc

.btn_cnt a
  font-size: 16px;
  color: #fff
  text-align: center;
  text-decoration: none;
  display: block
  width: 240px
  background-color: #11bbdd
  margin-top: 20px;
  margin-right: auto;
  margin-bottom: 30px;
  margin-left: auto;
  line-height: 22px;
  padding-top: 10px;
  padding-bottom: 10px;
  clear: both;
  font-weight: bold;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  &:hover
    opacity :0.5

.contact-text__tell
  text-align: center
  margin: 0 auto
  a
    color: #0099cc;
    -webkit-transition: 0.2s linear;
    -moz-transition: 0.2s linear;
    transition: 0.2s linear;
    font-size: 24px;
    text-decoration: none;
    &:hover
      opacity :0.5
