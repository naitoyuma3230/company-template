$MediaM = 770
$MediaL = 1200
$MediaS = 620

// 基本スマホ記述(～770px)

// lg記述(1200px～)
lg()
  @media screen and (min-width unit($MediaL , "px"))
    {block}

// md記述(770px～1200px)
md()
  @media screen and (min-width unit($MediaM, "px"))
    {block}

// sm記述(～480px)
sm()
  @media screen and (max-width unit($MediaS, "px"))
    {block}

section
  margin: 80px 0

#contents
  max-width: 1000px !important
  margin: 0 auto
  .list-column-container
    justify-content: center
    & .list-column
      background: black;
      color: white;
      width: 48%
      margin: 2px
      h4
        +sm()
          font-size: 16px
    +sm()
      display: inline 
      & .list-column
        width: 100%
        & img
          object-fit: cover
          width: 100%
          height: 7rem
  .list
    &:nth-of-type(1)::before
      content: "Wan Rei"
      font-size: 12vw
      left: 5%
      top: 10%

  .about-name
    text-align: center
    & h4
      font-size: 0.6rem
      margin-bottom: 0
      padding-bottom: 0
    & .daihyo
      font-size: 0.2rem
      margin-right: 0.4rem

#contents h2
  font-size: 200%;

.footer
  width: auto
  max-width 800px
  padding: 10px
  margin: 0 auto

  &__nav
    margin: 20px auto
    
    ul
      display: flex
      justify-content: center
      flex-wrap: wrap
      li
        margin-right: 10px
        a
          text-decoration: none

.base-info
  display: flex
  flex-wrap: wrap
  justify-content: center
  align-items: center
  padding: 10px
  font-size: 16px
  margin-bottom: 20px

  &__logo
    img
      width: 70px

  &__text
    text-align: left
    margin-left:10px

.map
  width: auto
  height: 300px
  background: #ccc

.btn_cnt a
  font-size: 16px;
  color: #fff
  text-align: center;
  text-decoration: none;
  display: block
  width: 240px
  background-color: #11bbdd
  margin-top: 20px;
  margin-right: auto;
  margin-bottom: 30px;
  margin-left: auto;
  line-height: 22px;
  padding-top: 10px;
  padding-bottom: 10px;
  clear: both;
  font-weight: bold;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  &:hover
    opacity :0.5

.contact-text__tell
  text-align: center
  margin: 0 auto
  a
    color: #0099cc;
    -webkit-transition: 0.2s linear;
    -moz-transition: 0.2s linear;
    transition: 0.2s linear;
    font-size: 24px;
    text-decoration: none;
    &:hover
      opacity :0.5

.myfc
  &__img
    width: 30%
    margin: 0 auto
    img
      display: block
      margin: 0 auto
  &__text
    text-align: center

.company-table
  margin: 0 auto

  & tr
    border-bottom: 1px solid #b5b1b1

  & th,td
    text-align: center
    padding: 24px 0
    border: none
    font-size: 18px
    +md()
      font-size: 20px
  & th
    width: 30%;
  &__address
    +sm()
      font-size:14px
    text-align: left
    margin-bottom:px
    span
      display: inline-block
      white-space nowrap
  &__name-box
    text-align: center

.work-list-item
  margin-bottom: 40px 
  h3
    font-weight: bold
    margin: 0 3%

.work-list
  border-radius: 5px;
  overflow: hidden;
  display: flex;
  background: #000;
  color: #fff;
  margin: 0 3% 10px

  &__text
    width: 50%
    padding: 10px

    h4
      padding: 8px 0
      font-size: 18px
    p
      padding: 0 !important
  figure
    width: 50%
    img
      height: 100%

.insta-box
  display: flex
  padding: 0 3%
  justify-content: center
  overflow: hidden

.work-img
  display: flex
  max-height:200px 
  justify-content: center
  border-radius: 5px;
  overflow: hidden;
  display: flex;
  color: #fff;
  margin: 0 3% 80px
  &.pb-none
    margin-bottom: 0 
  &__img-box
    overflow hidden
    img
      height: 100%
      width: 100%


